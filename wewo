<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Programowanie obiektowe JS</title>

<script type="text/javascript">

/* ===============================
   DEFINICJA KONSTRUKTORA
   =============================== */
function Uczen(nazwisko_u, imie_u, klasa_u, srednia_u)
{
    this.nazwisko = nazwisko_u;
    this.imie = imie_u;
    this.klasa = klasa_u;
    this.srednia = srednia_u;
}

/* ===============================
   METODA DODANA PRZEZ PROTOTYPE
   =============================== */
Uczen.prototype.wypisz = function()
{
    document.write(
        this.nazwisko + " " +
        this.imie + ", klasa: " +
        this.klasa + ", średnia: " +
        this.srednia + "<br>"
    );
};

/* ===============================
   POWOŁANIE OBIEKTÓW
   =============================== */
var uczen1 = new Uczen("Kowalski", "Jan", "3A", 4.5);
var uczen2 = new Uczen("Nowak", "Anna", "2B", 5.0);
var uczen3 = new Uczen("Wiśniewski", "Piotr", "1C", 3.8);

/* ===============================
   DOSTĘP DO WŁAŚCIWOŚCI
   =============================== */
document.write("<b>Dostęp do pól obiektów:</b><br>");
document.write(uczen1.nazwisko + " " + uczen1.imie + "<br>");
document.write(uczen2.nazwisko + " " + uczen2.imie + "<br>");
document.write(uczen3.nazwisko + " " + uczen3.imie + "<br><br>");

/* ===============================
   UŻYCIE METODY PROTOTYPOWEJ
   =============================== */
document.write("<b>Wyświetlanie danych metodą wypisz():</b><br>");
uczen1.wypisz();
uczen2.wypisz();
uczen3.wypisz();

/* ===============================
   DODANIE WŁAŚCIWOŚCI POZA CIAŁEM OBIEKTU
   =============================== */
uczen1.szkoła = "Technikum Informatyczne";

/* ===============================
   DODANIE METODY POZA CIAŁEM OBIEKTU
   =============================== */
uczen1.uczen_pokaz_nazwisko_ucznia = function()
{
    document.write("<br>Nazwisko ucznia: " + this.nazwisko + "<br>");
};

/* ===============================
   UŻYCIE DODANEJ METODY
   =============================== */
uczen1.uczen_pokaz_nazwisko_ucznia();

</script>
</head>

<body>
<br>
<b>Programowanie obiektowe – JavaScript</b>
</body>
</html>
 
   
 